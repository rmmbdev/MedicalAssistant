FROM python:3.10-slim-buster

WORKDIR /app

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

COPY src/bot /app
COPY src/celery /app
COPY src/utils /app

RUN pip install poetry && \
    poetry config virtualenvs.create false && \
    poetry install --no-interaction --no-ansi

RUN ls -la /app

CMD ["python", "/bot/main.py"]